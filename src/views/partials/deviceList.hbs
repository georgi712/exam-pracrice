{{#each devices}}
<div class="product-item">
    <img src="{{imageUrl}}" alt="{{model}}">
    <h3>{{brand}} {{model}}</h3>
    <h2>${{price}}</h2>
    <p>CPU: {{cpu}}</p>
    <p>GPU: {{gpu}}</p>
    <p>Screen: {{screenSize}} inch</p>
    <a href="/devices/{{id}}/details" class="btn">View Details</a>
</div>
{{else}}
<p class="no-post">There haven't been any devices posted yet.</p>
{{/each}}     